// ---   *   ---   *   ---
// info

$:VERT;>

  VERSION   v0.00.2b;
  AUTHOR    "IBN-3DILA";

// ---   *   ---   *   ---
// deps

  #include <version>
  #include <mesh/Vertex>
  ;

// ---   *   ---   *   ---

void main(void) {

  vec4 co     = extract_xyz();
  gl_Position = apply_transform(co);

  Tex_Coords  = extract_tex();

};

// ---   *   ---   *   ---
// deps

$:FRAG;>

  #include <version>
  ;

// ---   *   ---   *   ---
// inputs

  uniform sampler2DArray Surface;

// ---   *   ---   *   ---
// outputs

  out vec4 Frag_Color;

// ---   *   ---   *   ---

void main(void) {

  ivec3 dim     = textureSize(
    Surface,0

  );

  float uv_step = (1.0f/dim[0])*16;

  Frag_Color    = texture(
    Surface,
    vec3(Tex_Coords*uv_step,0)

  );

};

